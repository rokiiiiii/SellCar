@model SellCar.Domain.ViewModels.Profile.UserProfileViewModel;
<div class="container">
    <h3 class="mt-1">Profile</h3>
    <hr class="my-3">
    <div class="row">
        <div class="col-md-3">
            <div class="text-center">
                <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar rounded-circle img-thumbnail" alt="avatar">
                <h6 class="my-2">@Model.FirstName @Model.LastName</h6>
                <i>@Model.MembershipDate You became a member on</i>
            </div>
            <div class="list-group my-3">
                <a href="#" class="list-group-item list-group-item-action text-white bg-dark">Profile</a>
                <a href="/user/Stats" class="list-group-item list-group-item-action  d-flex justify-content-between align-items-center">My Stats</a>
                <a href="/user/ad" class="list-group-item list-group-item-action  d-flex justify-content-between align-items-center">My Published Ads</a>
                <a href="/user/favorites" class="list-group-item list-group-item-action  d-flex justify-content-between align-items-center">My Favorite Ads</a>
            </div>
        </div>
        <div class="col-md-9">
            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="pills-info-tab" data-toggle="pill" href="#pills-info" role="tab" aria-controls="pills-info" aria-selected="true">My information</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-edit-tab" data-toggle="pill" href="#pills-edit" role="tab" aria-controls="pills-edit" aria-selected="false">Edit</a>
                </li>
            </ul>
            <div class="tab-content" id="pills-tabContent" style="height:100%; width:100%; overflow-y:hidden;overflow-x:hidden">
                <div class="tab-pane fade show active" id="pills-info" role="tabpanel" aria-labelledby="pills-info-tab">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6>Name</h6>
                            <p>

                                @(Model.FirstName == null ? "-" : Model.FirstName)
                            </p>
                            <h6>Surname</h6>
                            <p>
                                @(Model.LastName == null ? "-" : Model.LastName)
                            </p>
                            <h6>User name</h6>
                            <p>
                                @(Model.UserName == null ? "-" : Model.UserName)
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h6>E-mail</h6>
                            <p>
                                @(Model.Email == null ? "-" : Model.Email)
                            </p>
                            <h6>Address</h6>
                            <p>
                                @(Model.Address == null ? "-" : Model.Address)
                            </p>
                            <h6>Phone</h6>
                            <p>
                                @(Model.PhoneNumber == null ? "-" : Model.PhoneNumber)
                            </p>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="pills-edit" role="tabpanel" aria-labelledby="pills-edit-tab">
                    <form asp-controller="USer" asp-action="UserProfileEdit" method="POST">
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class=" mb-1">Name</label>
                                    <input class="form-control " asp-for="FirstName" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class=" mb-1">Surname</label>
                                    <input class="form-control" asp-for="LastName" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class=" mb-1">User name</label>
                                    <input class="form-control" asp-for="UserName" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class=" mb-1">Phone</label>
                                    <input class="form-control " asp-for="PhoneNumber" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class=" mb-1">E-mail</label>
                            <input class="form-control" asp-for="Email" />
                        </div>
                        <div class="form-group">
                            <label class=" mb-1">Address</label>
                            <input class="form-control " asp-for="Address" />
                        </div>
                        <div class="form-group mt-4 mb-0"><button class="btn btn-success btn-block" type="submit">save changes</button></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
