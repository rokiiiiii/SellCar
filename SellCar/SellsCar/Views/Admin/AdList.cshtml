@{
    Layout = "_LayoutAdmin";
}
@model SellCar.Domain.ViewModels.Ad.AdsListViewModel
<div class="container-fluid my-2">
    <h3 class="mt-1">All ads</h3>
    <hr class="my-3">
    <div class="row">
        <div class="col-md-12">
            <table id="example" class="table table-striped table-bordered dt-responsive " style="width:100%">
                <thead>
                    <tr>
                        <th>Num ads</th>
                        <th>Picture</th>
                        <th>Price</th>
                        <th>Car</th>
                        <th>Brand</th>
                        <th>Model</th>
                        <th>Year</th>
                        <th>Km</th>
                        <th>Color</th>
                        <th>Region</th>
                        <th>Date create</th>
                        <th>Home page</th>
                        <th></th>
                    </tr>
                </thead>
                <tbkody>
                    @for (int i = 0; i < Model.Ads.Count; i++)
                    {
                        <tr>
                            <td>@Model.Ads[i].AdsId</td>
                            <td><a href="/car/details/@Model.Ads[i].AdsId"><img src="~/img/@(Model.Ads[i].PostingPictures[0].Url)" width=90 height="67"></a> </td>
                            <td>@Model.Ads[i].Price.ToString("")</td>
                            <td>@Model.Ads[i].Car.Name</td>
                            <td>@Model.Ads[i].Brand</td>
                            <td>@Model.Ads[i].Model</td>
                            <td>@Model.Ads[i].Year</td>
                            <td>@Model.Ads[i].Mileage</td>
                            <td>@Model.Ads[i].Color</td>
                            <td>@Model.Ads[i].Region.Name</td>
                            <td>@Model.Ads[i].DateCreate</td>
                            <td>
                                @if (Model.Ads[i].HomePage)
                                {
                                    <i class="fas fa-check-circle"></i>
                                }
                                else
                                {
                                    <i class="fas fa-times-circle"></i>
                                }
                            </td>
                            <td>
                                <a href="/admin/ads/@Model.Ads[i].AdsId" class="btn btn-primary btn-sm mr-2 mb-2"><i class="fas fa-edit"></i></a>
                                <form action="/admin/ads/delete" method="post" style="display:inline">
                                    <input type="hidden" name="AdsId" value="@Model.Ads[i].AdsId" />
                                    <button type="submit" class="btn btn-danger btn-sm "><i class="fas fa-trash-alt"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbkody>
            </table>
        </div>
    </div>
</div>


