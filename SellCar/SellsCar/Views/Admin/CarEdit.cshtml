@model SellCar.Domain.ViewModels.Cars.CarViewModel
@{
    Layout = "_LayoutAdmin";
}
<div class="container-fluid my-2">
    <h3 class="mt-1">Edit car</h3>
    <hr class="my-3">
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Admin" asp-action="CarEdit" method="post">
                <input type="hidden" asp-for="CarId" />
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Car</label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Name" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Car Url</label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Url" />
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Save changes</button>
            </form>
        </div>
        <div class="col-md-8">
            <table id="example" class="table table-striped table-bordered  dt-responsive " style="width:100%">
                <thead>
                    <tr>
                        <th>Num ads</th>
                        <th>Price</th>
                        <th>Car</th>
                        <th>Brand</th>
                        <th>Model</th>
                        <th>Year</th>
                        <th>Km</th>
                        <th>Color</th>
                        <th>Region</th>
                        <th>Date create</th>
                        <th>Home page</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Ads.Count; i++)
                    {
                        <tr>
                            <td>@Model.Ads[i].AdsId</td>
                            <td>@Model.Ads[i].Price.ToString("")</td>
                            <td>@Model.Ads[i].Car.Name</td>
                            <td>@Model.Ads[i].Brand</td>
                            <td>@Model.Ads[i].Model</td>
                            <td>@Model.Ads[i].Year</td>
                            <td>@Model.Ads[i].Mileage</td>
                            <td>@Model.Ads[i].Color</td>
                            <td>@Model.Ads[i].Region.Name</td>
                            <td>@Model.Ads[i].DateCreate</td>
                            <td>
                                @if (Model.Ads[i].HomePage)
                                {
                                    <i class="fas fa-check-circle"></i>
                                }
                                else
                                {
                                    <i class="fas fa-times-circle"></i>
                                }
                            </td>
                            <td>
                                <a href="/admin/ads/@Model.Ads[i].AdsId" class="btn btn-primary btn-sm mr-2"><i class="fas fa-edit"></i></a>
                                <form action="/admin/DeleteAds" method="post" style="display:inline">
                                    <input type="hidden" name="AdsId" value="@Model.Ads[i].AdsId" />
                                    <button type="submit" class="btn btn-danger btn-sm "><i class="fas fa-trash-alt"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



