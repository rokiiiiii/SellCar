@model SellCar.Domain.ViewModels.Regions.RegionListViewModel
@{
    Layout = "_LayoutAdmin";
}
<div class="container-fluid my-2">
    <h3 class="mt-1">Regions</h3>
    <hr class="my-3">
    <div class="row">
        <div class="col-md-12">
            <p>
                <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                    Add new region
                </a>
            </p>
            <div class="collapse" id="collapseExample">
                <div class="card card-body">
                   
                </div>
            </div>
            <table id="example" class="table table-striped table-bordered dt-responsive " style="width:100%">
                <thead>
                    <tr>
                        <th>Region id</th>
                        <th>Region name</th>
                        <th>Number of ads</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Region)
                    {
                        <tr>
                            <td>@item.RegionId</td>
                            <td>@item.Name</td>
                            <td>@item.Ads.Count()</td>
                            <td>
                                <a href="/admin/region/@item.RegionId" class="btn btn-primary btn-sm mr-2"><i class="fas fa-edit"></i></a>
                                <form action="/admin/region/delete" method="post" style="display:inline">
                                    <input type="hidden" name="regionId" value="@item.RegionId" />
                                    <button type="submit" class="btn btn-danger btn-sm "><i class="fas fa-trash-alt"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
