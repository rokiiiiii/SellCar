@model SellCar.Domain.ViewModels.Roles.RoleDetails
@{
    Layout = "_LayoutAdmin";
}
<div class="container-fluid my-2">
    <h3 class="mt-1">Edit roles</h3>
    <hr class="my-3">
    <div class="row">
        <div class="col-md-12">
            <form asp-controller="Admin" asp-action="RoleEdit">
                <input type="hidden" name="RoleId" value="@Model.Role.Id" />
                <input type="hidden" name="RoleName" value="@Model.Role.Name" />
                <h6 class="bg-info text-white p-1"> @Model.Role.Name Add</h6>
                <table class="table table-bordered table-sm">
                    @if (Model.NonMembers.Count() == 0)
                    {
                        <tr>
                            <td colspan="2">All users have a role</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var user in Model.NonMembers)
                        {

                            <tr>
                                <td>@user.UserName</td>
                                <td style="width:150px;">
                                    <input type="checkbox" name="IdsToAdd" value="@user.Id" />
                                </td>
                            </tr>
                        }
                    }
                </table>
                <hr />
                <h6 class="bg-info text-white p-1"> @Model.Role.Name Delete</h6>
                <table class="table table-bordered table-sm">
                    @if (Model.Members.Count() == 0)
                    {
                        <tr>
                            <td colspan="2">No user for the role</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var user in Model.Members)
                        {

                            <tr>
                                <td>@user.UserName</td>
                                <td style="width:150px;">
                                    <input type="checkbox" name="IdsToDelete" value="@user.Id" />
                                </td>
                            </tr>
                        }
                    }
                </table>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </form>
        </div>
    </div>
</div>
